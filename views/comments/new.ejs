<% include ../partials/header %>
<div class="container">
    <h2 style="text-align:center">Add New Comment to <%= campground.name %></h2>
    <div style="width: 35%; margin: 30px auto">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="New Comment">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>